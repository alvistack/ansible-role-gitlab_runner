# {{ ansible_managed }}

[Unit]
Description=GitLab Runner
After=network-online.target local-fs.target remote-fs.target time-sync.target virt-guest-shutdown.target
Wants=network-online.target local-fs.target remote-fs.target time-sync.target virt-guest-shutdown.target

[Service]
StartLimitInterval=5
StartLimitBurst=10
Restart=always
RestartSec=120
ExecStart=/usr/bin/gitlab-runner run \
    --config /etc/gitlab-runner/config.toml

[Install]
WantedBy=multi-user.target
